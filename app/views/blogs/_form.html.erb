<%= form_with model: blog, url: form_path do |form| %>
  <div class="col-12 col-lg-8 mb-3">
    <label for="title" class="form-label mb-1 fw-semibold">Title</label>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="col-12 col-lg-8 mb-3">
    <%= form.label :content, class: "form-label mb-2 fw-semibold" %>
    <%= form.rich_text_area :content, class: "form-control overflow-auto", style: "height: 460px;", required: true %>
  </div>

  <div class="col-12 col-lg-3 col-xl-2 pt-2 pt-lg-3 pb-4 pb-lg-5">
    <%= form.submit action_name == "new" ? "Publish Blog" : "Save changes", class: "btn btn-dark rounded-pill w-100" %>
  </div>
<% end %>