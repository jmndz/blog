<div class="container">
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid px-0">
      <%= link_to root_path, class: "navbar-brand fw-bold" do %>
        JEM
      <% end %>
      <button class="navbar-toggler border-0 rounded-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <% if user_signed_in? %>
          <%= render "blogs/avatar", height: 35, width: 35, initial: current_user.first_name[0] %>
        <% else %>
          <span class="navbar-toggler-icon"></span>
        <% end %>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <% if user_signed_in? %>
          <!-- Desktop -->
          <ul class="ms-auto d-none d-lg-flex me-2 navbar-nav">
            <li class="nav-item">
              <%= link_to new_blog_path, class: "nav-link" do %>
                <i class="bi bi-pencil-square"></i> Write
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "#", class: "nav-link" do %>
                <i class="bi bi-bell"></i>
              <% end %>
            </li>
          </ul>

          <div class="d-none d-lg-block dropdown">
            <a class="nav-link px-0" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
              <%= render "blogs/avatar", height: 35, width: 35, initial: current_user.first_name[0] %>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to destroy_user_session_path, class: "dropdown-item", data: { turbo_method: "delete" } do %>
                  <i class="bi bi-box-arrow-left"></i> Logout
                <% end %>
              </li>
            </ul>
          </div>  

          <!-- Mobile -->
          <ul class="d-block d-lg-none navbar-nav">
            <li class="nav-item">
              <%= link_to new_blog_path, class: "nav-link" do %>
                  <i class="bi bi-pencil-square"></i> Write
                <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, class: "nav-link", data: { turbo_method: "delete" } do %>
                <i class="bi bi-box-arrow-left"></i> Logout
              <% end %>
            </li>
          </ul>
        <% else %>
          <!-- Desktop -->
          <div class="d-none d-lg-flex gap-4 ms-auto">
            <button class="btn btn-light bg-transparent fw-bold nav-link rounded-pill border-0" type="button" data-bs-target="#signInModal" data-bs-toggle="modal">Sign In</button>
            <button class="btn btn-dark rounded-pill" type="button" data-bs-target="#signUpModal" data-bs-toggle="modal">Sign Up</button>
          </div>

          <!-- Mobile -->
          <ul class="d-block d-lg-none navbar-nav">
            <li class="nav-item">
              <%= link_to "javascript:void(0)", class: "nav-link", data: { bs_target: "#signInModal", bs_toggle: "modal" } do %>
                Sign In
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "javascript:void(0)", class: "nav-link", data: { bs_target: "#signInModal", bs_toggle: "modal" } do %>
                Sign Up
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>

  <%= render "home/modal/sign_in" %>
  <%= render "home/modal/sign_up" %>
</div>