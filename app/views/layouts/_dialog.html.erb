<dialog id="turbo-confirm">
  <form method="dialog">
    <div class="text-end mb-4">
      <button class="btn-close" value="cancel"></button>
    </div>
    <p class="px-5">Are you sure?</p>
    <div class="text-end pt-4">
      <button class="btn btn-light rounded-pill px-5 me-1" value="cancel">Cancel</button>
      <button class="btn btn-dark rounded-pill px-5" value="confirm">Confirm</button>
    </div>
  </form>
</dialog>